{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ES2022",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true,
        "typeRoots": ["./node_modules/@types", "./@types"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
