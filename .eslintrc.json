{
    "parser": "@typescript-eslint/parser",
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "env": {
      "node": true,
      "es2020": true
    },
    "rules": {
      "@typescript-eslint/no-explicit-any": "off",  // Exemplo de regra que pode ser personalizada
      "prettier/prettier": "error"  // Faz o ESLint exibir erro para código não formatado com Prettier
    }
  }
  